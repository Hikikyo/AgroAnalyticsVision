<% include layout-top %>

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3><%=title %></h3>
            </div>
        </div>
        <div class="clearfix"></div>
        <ol class="breadcrumb">
            <li><a href="/" >Home</a></li>
            <li class="active"><%=title %></li>
        </ol>
         <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                  <div class="x_title">
                    <h2>Formulário <small>preencha os dados da Regra</small></h2>
                    <ul class="nav navbar-right panel_toolbox">
                      <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                      </li>
                      <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                          <li><a href="#">Settings 1</a>
                          </li>
                          <li><a href="#">Settings 2</a>
                          </li>
                        </ul>
                      </li>
                      <li><a class="close-link"><i class="fa fa-close"></i></a>
                      </li>
                    </ul>
                    <div class="clearfix"></div>
                  </div>
                   <!-- Panel -->
                  <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="x_content">
                                <div class="container-fluid"
                                    data-ng-cloak
                                    data-ng-app="regraModule"
                                    data-ng-controller="createRegraController">
                                
                                    <form
                                        class="form-horizontal form-label-left" role="search"
                                        method="POST"
                                        name="formImposto" novalidate>
                                        
                                        <div class="item form-group">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">Nome da Regra de Faturamento<span class="required">*</span>
                                            </label>
                                            <div class="col-md-6 col-sm-6 col-xs-12"> 
                                                <input type="text"
                                                class="form-control col-md-7 col-xs-12"
                                                placeholder="Digite o nome da regra"
                                                name="nome_regra"
                                                id="nome_regra"

                                                ng-model="regra.nome_regra"

                                                style="width:100%"

                                                required
                                                >
                                            </div>
                                        </div>
                                        &nbsp; 
                                        <div class="item form-group">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">Serviço<span class="required">*</span>
                                            </label>
                                            <div class="fcol-md-6 col-sm-6 col-xs-12">
                                                <select class="form-control"
                                                    ng-model="regra.codigo_servico"
                                                    style="width:100%"
                                                    required>
                                                    <option data-ng-repeat="servico in servicos" value="{{servico.codigo_servico}}">{{servico.nome_servico}}</option>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="ln_solid"></div>

                                        <div class="form-group">
                                            <div class="col-md-6 col-md-offset-3">
                                                    <button type="submit" class="btn btn-default"
                                                    ng-click="redirectHome()"
                                                    ><b>Cancelar</b></button>
                                                    <button type="button" class="btn btn-success"
                                                    data-toggle="modal" data-target="#atencao" 
                                                    ><b>Definir Regra</b></button>
                                            </div>
                                        </div>
                                        <!-- Modal - VERIFICAÇÃO -->
                                        <div id="atencao" class="modal fade" role="dialog" class="form-group">
                                        <div class="modal-dialog">

                                            <!-- Modal content-->
                                            <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                <h4 class="modal-title"><i class="fa fa-exclamation-triangle" style="color: red" aria-hidden="true"></i>&nbsp;Atenção!</h4>
                                            </div>
                                            <div class="modal-body">
                                                <p>Você tem certeza que deseja criar a regra de faturamento?</p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-default" data-dismiss="modal" 
                                                        data-toggle="modal" data-target="#sucesso" ng-click="createRegra(regra)">Sim</button>
                                                <button type="button" class="btn btn-default" data-dismiss="modal">Não</button>
                                            </div>
                                            </div>

                                        </div>
                                        </div>

                                        <!-- Modal - SUCESSO-->
                                        <div id="sucesso" class="modal fade" role="dialog">
                                        <div class="modal-dialog">

                                            <!-- Modal content-->
                                            <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                <h4 class="modal-title"><i class="fa fa-check" style="color: green" aria-hidden="true"></i> &nbsp;Operação Efetuada com sucesso</h4>
                                            </div>
                                            <div class="modal-body">
                                                <p>A regra foi criado com sucesso.</p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-default" ng-click="redirectCreateRegra()" >Confirmar</button>
                                            </div>
                                            </div>

                                        </div>
                                        </div>    
                                    </form>
                                </div>
                            </div>
                            </div>
                            </div>
                  <!-- Panel -->
              </div>
            </div>
        </div>
    </div>
</div>

<% include layout-bottom %>


<script src="/bower_components/angular/angular.min.js"></script>
<script src="javascripts/app/regra/regraModule.js"></script>
<script src="javascripts/app/regra/regraService.js"></script>
<script src="javascripts/app/regra/createRegraController.js"></script>

<!-- validator -->
<script src="themes/gentelella-master/vendors/validator/validator.js"></script>









